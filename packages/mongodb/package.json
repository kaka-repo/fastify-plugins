{
  "name": "@kakang/fastify-mongodb",
  "version": "0.0.4",
  "description": "Fastify plugin for mongodb connection",
  "keywords": [
    "fastify",
    "kakang"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/mjs/index.js",
      "require": "./lib/index.js"
    }
  },
  "scripts": {
    "clean": "node ../../scripts/build.mjs --clean",
    "lint": "eslint --ext .ts lib test",
    "lint:fix": "npm run lint -- --fix",
    "build": "node ../../scripts/build.mjs --build=\"all\"",
    "build:cjs": "node ../../scripts/build.mjs --build='cjs'",
    "build:mjs": "node ../../scripts/build.mjs --build='mjs'",
    "unit": "cross-env \"NODE_OPTIONS=--require ts-node/register\" unit",
    "test": "npm run lint && npm run unit",
    "coverage": "cross-env \"NODE_OPTIONS=--require ts-node/register\" c8 unit",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run clean"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaka-ng/fastify-plugins.git"
  },
  "author": "KaKa <kaka@kakang.dev>",
  "license": "MIT",
  "devDependencies": {
    "@kakang/unit": "^0.0.2",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "c8": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.4.0",
    "eslint-config-love": "^47.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "fastify": "^4.27.0",
    "mongodb": "^6.6.1",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "mongodb": "^6.6.1"
  },
  "dependencies": {
    "fastify-plugin": "^4.5.1"
  }
}
